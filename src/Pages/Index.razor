@page "/"
@using Radgen.Data;

<PageTitle>Index</PageTitle>

<h1>Radzen Grid</h1>

<EditForm Model="_radzenGridOptions">
    <div class="row">
        <div class="col-2">
            <div>
                <input type="checkbox" id="AllowPaging" @bind="_radzenGridOptions.AllowPaging" />
                <label for="AllowPaging">Allow paging</label>
            </div>
            <div>
                <input type="checkbox" id="AllowSorting" @bind="_radzenGridOptions.AllowSorting" />
                <label for="AllowSorting">Allow sorting</label>
            </div>
        </div>

        <div class="col">
            <pre>
            <code>
               &lt;RadzenGrid AllowPaging="@_radzenGridOptions.AllowPaging" AllowSorting="@_radzenGridOptions.AllowSorting"&gt;

               &lt;/RadzenGrid&gt;
            </code>
            </pre>
        </div>
    </div>
    @* <button type="submit" onclick=""></button> *@
</EditForm>

@code {
    private RadzenGridOptions _radzenGridOptions = new RadzenGridOptions();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }
}
